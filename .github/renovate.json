{
  "extends": ["config:recommended"],
  "timezone": "Europe/Paris",
  "schedule": ["before 9am on Monday"],
  "baseBranches": ["main"],
  "groupName": "all dependencies",
  "separateMajorMinor": false,
  "groupSlug": "all",
  "packageRules": [
    {
      "groupName": "all dependencies",
      "groupSlug": "all",
      "matchPackageNames": ["*"]
    }
  ],
  "ignoreDeps": [
    "next",
    "eslint-config-next",
    "electron",
    "eslint",
    "electron-store",
    "electron-serve",
    "react",
    "react-dom",
    "@types/react",
    "@types/react-dom"
  ],
  "lockFileMaintenance": {
    "enabled": false
  }
}
